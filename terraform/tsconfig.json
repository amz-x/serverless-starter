{
    "compilerOptions": {
      "alwaysStrict": true,
      "charset": "utf8",
      "declaration": true,
      "experimentalDecorators": true,
      "inlineSourceMap": true,
      "inlineSources": true,
      "lib": ["ES2018"],
      "module": "CommonJS",
      "noEmitOnError": true,
      "noFallthroughCasesInSwitch": true,
      "noImplicitAny": true,
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "resolveJsonModule": true,
      "strict": true,
      "strictNullChecks": true,
      "strictPropertyInitialization": true,
      "stripInternal": true,
      "target": "ES2018",
      "incremental": true
    },
    "include": [
      "**/*.ts"
    ],
    "exclude": [
      "builds",
      "node_modules",
      "cdktf.out",
      "terraform.out"
    ]
  }
